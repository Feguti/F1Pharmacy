@model F1Pharmacy.Models.Medicine

@{
    ViewData["Title"] = "Atualizar medicamento";
}

<div class="text">
    <h1 class="display-4">Atualizar especificações de medicamento</h1>
    <hr>

</div>
<div class="container">
    <form action="Atualizar" method="POST">
        <div class="form-group">
            <label for="id">Id</label>
            <input type="text" name="id" id="id" class="form-control" value="@Model.Id" readonly>
        </div>
        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" name="name" id="name" class="form-control" value="@Model.Name" required>
        </div>
        <div class="form-group">
            <label for="type">Tipo</label>
            <select class="form-control" name="type" id="type" value="@Model.Type" required>
                <option value="" disabled selected>Selecione o tipo do medicamento</option>
                <option value="1">Líquido</option>
                <option value="2">Comprimido</option>
                <option value="3">Capsula</option>
                <option value="4">Pomada</option>
                <option value="5">Inalável</option>
                <option value="6">Spray</option>
                <option value="7">Injeção</option>
            </select>
        </div>
        <div class="form-group">
            <label for="description">Descrição</label>
            <input type="text" name="description" id="description" class="form-control" value="@Model.Description"
                required>
        </div>

        <button type="submit" class="btn btn-primary">Atualizar</button>
    </form>
</div>