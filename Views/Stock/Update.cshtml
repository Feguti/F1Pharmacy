@model F1Pharmacy.Models.Stock

@{
    ViewData["Title"] = "Atualizar item";
}

<div class="text">
    <h1 class="display-4">Atualizar cadastro do item</h1>
    <hr>

</div>
<div class="container">
    <form action="Update" method="POST">
        <div class="form-group">
            <label for="id">Id</label>
            <input type="text" name="id" id="id" class="form-control" value="@Model.Id" readonly>
        </div>
        <div class="form-group">
            <label for="name">Item</label>
            <input type="text" name="item" id="item" class="form-control" value="@Model.Item" required>
        </div>
        <div class="form-group">
            <label for="description">Quantity</label>
            <input type="text" name="quantity" id="quantity" class="form-control" value="@Model.Quantity" required>
        </div>

        <button type="submit" class="btn btn-primary">Atualizar</button>
    </form>
</div>