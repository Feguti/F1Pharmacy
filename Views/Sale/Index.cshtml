@model IEnumerable<F1Pharmacy.Models.Sale>

@{
    ViewData["Title"] = "Vendas";
}

<h1>@ViewData["Title"]</h1>
<a class = "btn btn-primary btn-sm"href ="/Sale/Create/">Fazer venda</a>

@if(Model.Count() == 0)
{
    <p>Nenhuma venda</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Item</th>
                <th>Quantidade</th>
                <th>Valor</th>
            </tr>
        </thead>
        <body>
            @foreach(var sale in Model)
            {
                <tr>
                    <td>@sale.Id</td>
                    <td>@sale.Item</td>
                    <td>@sale.Quantity</td>
                    <td>@sale.Value</td>
                    <td>
                        <a class = "btn btn-primary btn-sm"href ="/Sale/Show/@sale.Id">Ver</a>
                        <a class = "btn btn-primary btn-sm"href ="/Sale/Update/@sale.Id">Atualizar</a>
                        <a class = "btn btn-primary btn-sm"href ="/Sale/Delete/@sale.Id">Deletar</a>
                    </td>
                </tr>
            }
        </body>
    </table>        
}